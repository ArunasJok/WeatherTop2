<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
    <div class="two fields">
        <div class="field">
            <label>Weather Code</label>
            <input placeholder="Code" type="text" name="code">
        </div>
        <div class="field">
            <label>Temperature</label>
            <input placeholder="Temp" type="text" name="temperature">
        </div>
        <div class="field">
            <label>Wind</label>
            <input placeholder="Wind" type="text" name="windSpeed">
        </div>
        <div class="field">
            <label>Pressure</label>
            <input placeholder="Pressure" type="text" name="pressure">
        </div>
    </div>
    <button class="ui blue submit button">Add readings</button>
</form>