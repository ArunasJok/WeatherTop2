<table class="ui table">
    <thead>
    <tr>
        <th>Weather</th>
        <th>Temperature</th>
        <th>Wind</th>
        <th>Pressure</th>
    </tr>
    </thead>
    <tbody>
    {{#each station.readings}}
        <tr>
            <td>
                {{code}}
            </td>
            <td>
                {{temperature}}
            </td>
            <td>
                {{windSpeed}}
            </td>
            <td>
                {{pressure}}
            </td>
            <td>
                <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
                    <i class="icon trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>